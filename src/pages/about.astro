---
import BaseLayout from '../layouts/BaseLayout.astro'

const pageTitle = 'About Me'

const idenity = {
  name: 'Danny Smith',
  age: 36,
  location: 'London, UK',
  occupation: 'COO',
  hobbies: ['writing', 'reading', 'hiking'],
}

const skills = [
  'HTML',
  'CSS',
  'JavaScript',
  'Python',
  'React',
  'Node.js',
  'Git',
  'GitHub',
  'Markdown',
  'Astro',
]

const happy = true
const finished = false
const goal = 3

const skillColor = 'navy'
---

<style define:vars={{ skillColor }}>
  h2 {
    color: goldenrod;
  }
  .skill {
    color: var(--skillColor);
    font-weight: bold;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <h2>... and my new Astro site!</h2>

  <p>
    I am working through Astro's introductory tutorial. This is the second page
    on my website, and it's the first one I built myself!
  </p>

  <p>
    This site will update as I complete more of the tutorial, so keep checking
    back and see how my journey is going!
  </p>

  {happy && <p>I am happy to be learning Astro.</p>}
  {finished && <p>I have finished the tutorial.</p>}
  {
    goal == 3 ? (
      <p>I am on the third step of the tutorial.</p>
    ) : (
      <p>I am not on the third step of the tutorial.</p>
    )
  }

  <p>Here are a few facts about me</p>
  <ul>
    <li>My name is {idenity.name}.</li>
    <li>I live in {idenity.location} and work as a {idenity.occupation}.</li>
    {idenity.hobbies.map((hobby) => <li>I enjoy {hobby}.</li>)}
  </ul>

  <p>Some of my skills are</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>
